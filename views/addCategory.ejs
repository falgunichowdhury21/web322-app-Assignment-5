<div class="container" style="padding-top: 90px;">
    <h2>Add Category</h2>
    <form method="post" action="/categories/add">
        <fieldset>
            <div class="form-group">
                <label for="category">Category:</label>
                <input 
                    class="form-control" 
                    id="category" 
                    name="category" 
                    type="text" 
                    required 
                    autofocus 
                />
            </div>
        </fieldset>
        <hr />
        <input
            type="submit"
            class="btn btn-primary pull-right"
            value="Add Category"
        /><br /><br /><br />
    </form>
</div>